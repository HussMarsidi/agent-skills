{
  "name": "@hussmarsidi/agent-skills",
  "version": "0.1.0",
  "description": "CLI tool to generate Agent Skills templates following Agent Skills specification",
  "type": "module",
  "bin": {
    "create-agent-skills": "./bin/create-agent-skills.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "node scripts/prepublish.js",
    "version:major": "npm version major --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "publish:major": "pnpm run version:major && pnpm run publish:execute",
    "publish:minor": "pnpm run version:minor && pnpm run publish:execute",
    "publish:patch": "pnpm run version:patch && pnpm run publish:execute",
    "publish:execute": "node scripts/publish.js"
  },
  "keywords": [
    "cursor",
    "skills",
    "cli",
    "generator"
  ],
  "author": "Hussaini Marsidi <hussainimarsidi.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.27.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@vitest/ui": "^4.0.17",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "commands/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HussMarsidi/agent-skills.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
